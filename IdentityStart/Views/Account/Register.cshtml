@using Models

@model RegisterModel

@{
    ViewData["Title"] = "User Resgiter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Register</h1>
<form asp-controller="Account" asp-action="Register" method="post" role="form">
    <!--Name-->
    <div class="text-danger" asp-validation-summary="All"></div>
     <div class="form-group">
         <label asp-for="Name" class="col-md-2"></label>
         <div class="col-md-10">
             <input asp-for="Name" class="form-control"/>
             <span asp-validation-for="Name" class="text-danger"></span>
         </div>
     </div>
     <!--Email-->
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <!--Password-->
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <!--ConfirmPassword-->
    <div class="form-group">
        <label asp-for="ConfirmPassWord" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassWord" class="form-control" />
            <span asp-validation-for="ConfirmPassWord" class="text-danger"></span>
        </div>
    </div>
    <!--CountryCode-->
    <div class="form-group">
        <label asp-for="CountryCode" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="CountryCode" class="form-control" />
            <span asp-validation-for="CountryCode" class="text-danger"></span>
        </div>
    </div>
    <!--Telephone-->
    <div class="form-group">
        <label asp-for="Telephone" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Telephone" class="form-control" />
            <span asp-validation-for="Telephone" class="text-danger"></span>
        </div>
    </div>
    <!--Country-->
    <div class="form-group">
        <label asp-for="Country" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Country" class="form-control" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
    </div>
    <!--City-->
    <div class="form-group">
        <label asp-for="City" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
    </div>
    <!--Address-->
    <div class="form-group">
        <label asp-for="Address" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>
    <!--BirthDate-->
    <div class="form-group">
        <label asp-for="BirthDate" class="col-md-2"></label>
        <div class="col-md-10">
            <input type="text" name="BirthDate" class="form-control" id="datepicker" placeholder="Ej 2022/10/22 05:06"/>
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>
    <!--Submit Button-->
    <div class="form-group mt-3">
        <div class="col-md-10">
            <button class="btn btn-success w-100" type="submit">Register <i class="bi bi-door-open"></i></button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    } 