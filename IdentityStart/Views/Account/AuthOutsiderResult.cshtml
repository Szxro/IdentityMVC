@using Models
@model AuthOutsider

<h2 class="text-info">Registro</h2>
<h3>Asociar su cuenta de: @ViewData["LoginProvider"].</h3>

<form asp-controller="Account" asp-action="AuthOutsiderResult" method="post" asp-route-returnurl="@ViewData["returnUrl"]">
    <hr />
    <div class="text-danger" asp-validation-summary="All"></div>
    <p>
        You log in correcty <strong>@ViewData["LoginProvider"]</strong>.
        Fill the name input and email input and click in the button to finish 
    </p>

    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-2 mt-3">
            <button type="submit" class="btn  btn-primary form-control">Register</button>
        </div>
    </div>

</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


