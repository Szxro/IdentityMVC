@using Models;
@model ResetPasswordModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Reset Password</h1>
<form asp-controller="Account" asp-action="ResetPassword" method="post" role="form">
    <!--Email-->
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <!--Password-->
    <div class="form-group">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <!--ConfirmPassword-->
    <div class="form-group">
        <label asp-for="ConfirmationPassword" class="col-md-2"></label>
        <div class="col-md-10">
            <input asp-for="ConfirmationPassword" class="form-control" />
            <span asp-validation-for="ConfirmationPassword" class="text-danger"></span>
        </div>
    </div>
    <!--Code Hidden-->
    <input asp-for="Code" type="hidden" />
    <!--Submit Button-->
    <div class="form-group mt-3">
        <div class="col-md-10">
            <button class="btn btn-success w-100" type="submit">Reset Password <i class="fa-solid fa-power-off"></i> </button>
        </div>
    </div>
</form>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
    }
